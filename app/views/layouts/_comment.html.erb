<div class='comments'>
<% @po.comments.where(reply_id: nil).each do |c| %>
<% @divclasses = 'comment' %>
  <% if c.private == true %>
    <% @divclasses.concat(' private') %>
  <% end %>
<div class="<%= @divclasses %>">
  <p>
  <%= c.body %>
<br>
<% if c.shared == true %>
Shared 
<% end %>
<i>by <%= c.username.name %></i> at <%= c.created_at.strftime('%-l:%M%P on %b %-d, %Y') %>
</p></div>
<% @po.comments.where(reply_id: c.id).each do |rep| %>
<% @divclasses = 'comment' %>
<% @divclasses.concat(' indent') %>
<% if rep.private == true %>
    <% @divclasses.concat(' private') %>
<% end %>
<div class="<%= @divclasses %>">
  <%= rep.body %>
<br><i>by <%= rep.username.name %></i> at <%= rep.created_at.strftime('%-l:%M%P on %b %-d, %Y') %>
</p>

</div>
<% end %>
<div>
<% @co = c %>
<%= render 'layouts/comment_on_comment_form' %>
</div>
<% end %>
</div>
