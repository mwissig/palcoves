<h1>Create a Username</h1>
<div class="box">
<% if logged_in? %>

<%= form_for(@username) do |f| %>
<%= f.text_field :name, placeholder: 'create a username', require: true, :id => "create-username", :onkeydown => "updateUsernameCounter()" %><span id="username-char-count"></span><br>
<%= f.text_area :profile, placeholder: 'write a description (you can do this later)' %><br>
<%# f.file_field :avatar, placeholder: 'upload an avatar' %><br>
<% if @current_user.usernames.exists? %>
<%= f.label "Make default?" %><%= f.check_box :default %><br>
<% else %>
<%= f.hidden_field :default, value: true %>

<% end %>
<%= f.submit 'Create username' %>
<% end %>
<% else %>
Must be logged in
<% end %>
</div>
