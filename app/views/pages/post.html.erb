<div class="box">
<% if logged_in? %>
 <%= form_for([@username, @post]) do |f| %>
<%= f.label 'Post as' %> <%= f.select :username_id, @username_selector %><br>
  <%= f.text_field :title, placeholder: 'title', require: true %><br>
  <%= f.text_area :body, placeholder: 'body', require: true %><br>
  <%= f.file_field :image, placeholder: 'upload an image' %><br>
  <%= f.label "Add to archive?" %><%= f.check_box :archive %><br>
    <%= f.label "Add to gallery?" %><%= f.check_box :gallery %><br>
  <%= f.submit 'Post' %>
<% end %>
<% else %>
You must be logged in to post.
<% end %>
</div>
