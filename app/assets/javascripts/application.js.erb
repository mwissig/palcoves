function updateUsernameCounter(){
    var charCount = $('#create-username').val().length + 1;
            $('#username-char-count').css('color', 'red');
    $('#username-char-count').html(charCount);
    if (charCount >= 4 || charcount <= 100 ) {
        $('#username-char-count').css('color', 'green');
     } else {
        $('#username-char-count').css('color', 'red');
     }
 };

